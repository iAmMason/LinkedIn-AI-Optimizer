{
  "manifest_version": 3,
  "name": "AI Prompt Remover for Linkedin",
  "version": "1.0",
  "description": "Removes AI prompts from posted content",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.linkedin.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["content_script.js"]
    }
  ],
  "icons": {
    "16": "pizza16.png",
    "32": "pizza32.png",
    "48": "pizza48.png",
    "128": "pizza128.png"
  }
}
